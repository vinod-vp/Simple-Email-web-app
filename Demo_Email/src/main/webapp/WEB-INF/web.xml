<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Demo_Email</display-name>
  <servlet>
     <servlet-name>reg</servlet-name>
     <servlet-class>com.JavaMail.Registration</servlet-class> 
  </servlet>
  <servlet-mapping>
     <servlet-name>reg</servlet-name>
     <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
     <servlet-name>login</servlet-name>
     <servlet-class>com.JavaMail.Login</servlet-class> 
  </servlet>
  <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
     <servlet-name>sendmail</servlet-name>
     <servlet-class>com.JavaMail.SendEmail</servlet-class> 
  </servlet>
  <servlet-mapping>
     <servlet-name>sendmail</servlet-name>
     <url-pattern>/sendemail</url-pattern>
  </servlet-mapping>
  <servlet>
     <servlet-name>inboxmail</servlet-name>
     <servlet-class>com.JavaMail.InboxEmail</servlet-class> 
  </servlet>
  <servlet-mapping>
     <servlet-name>inboxmail</servlet-name>
     <url-pattern>/inboxemail</url-pattern>
  </servlet-mapping>
   <servlet>
     <servlet-name>sentmail</servlet-name>
     <servlet-class>com.JavaMail.SentEmail</servlet-class> 
  </servlet>
  <servlet-mapping>
     <servlet-name>sentmail</servlet-name>
     <url-pattern>/sentemail</url-pattern>
  </servlet-mapping>
  <servlet>
     <servlet-name>deleteacc</servlet-name>
     <servlet-class>com.JavaMail.DeleteUser</servlet-class> 
  </servlet>
  <servlet-mapping>
     <servlet-name>deleteacc</servlet-name>
     <url-pattern>/deleteuser</url-pattern>
  </servlet-mapping>
</web-app>